# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Time

type Paste {
  id: ID!
  author: String!
  title: String!
  content: String!
  language: String
  createdAt: Time!
}

type Query {
  paste(id: ID!): Paste 
}

input NewPaste {
  title: String!
  content: String!
  language: String
}

type Mutation {
  createPaste(input: NewPaste!): Paste!
}
